<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sphere">


    <TextView
        android:id="@+id/sphere_title"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="117dp"

        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Sphere Volume"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_sphere"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editText_sphere"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_sphere"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="235dp"
        android:layout_marginBottom="16dp"
        android:hint="Please Enter the radius"
        app:layout_constraintBottom_toTopOf="@+id/sphere_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sphere_title" />

    <TextView
        android:id="@+id/sphere_result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:text="Result"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/sphere_button"
        app:layout_constraintEnd_toEndOf="@+id/editText_sphere"
        app:layout_constraintStart_toStartOf="@+id/sphere_button"
        app:layout_constraintTop_toBottomOf="@+id/editText_sphere" />

    <Button
        android:id="@+id/sphere_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="235dp"
        android:layout_marginBottom="481dp"
        android:text="Calculate Volume"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sphere_result" />

</androidx.constraintlayout.widget.ConstraintLayout>